{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug All Unit Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": ""
        },
        {
            "name": "Debug Specific Test Case",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:testCase}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": ""
        },
        {
            "name": "Debug with Test Filter",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--reporter=console",
                "--break",
                "${input:testFilter}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": ""
        },
        {
            "name": "Debug Transcoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:videoPath}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": ""
        }
    ],
    "inputs": [
        {
            "id": "testCase",
            "type": "promptString",
            "description": "Test case name (e.g., 'Tensor creation')",
            "default": ""
        },
        {
            "id": "testFilter",
            "type": "promptString",
            "description": "Test filter pattern (e.g., '[dtype]' or 'Tensor*')",
            "default": ""
        },
        {
            "id": "videoPath",
            "type": "promptString",
            "description": "Path to video file",
            "default": "${workspaceFolder}/tests/data/video/file_example_MP4_480_1_5MG.mp4"
        }
    ]
}