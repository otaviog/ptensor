{
    "version": 6,
    "configurePresets": [
        {
            "name": "base",
            "description": "Base for all configs",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "SKBUILD_PROJECT_NAME": "ptensor"
            }
        },
        {
            "name": "base-dev",
            "inherits": "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_MANIFEST_FEATURES": "io;tests;op;media;samples",
                "WITH_IO": "ON",
                "WITH_OP": "ON",
                "WITH_MEDIA": "ON",
                "BUILD_TESTS": "ON",
                "BUILD_SAMPLES": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/installed"
            }
        },
        {
            "inherits": "base",
            "name": "package-core"
        },
        {
            "inherits": "base",
            "name": "package-dependencies",
            "cacheVariables": {
                "WITH_IO": "ON",
                "WITH_OP": "ON"
            }
        }
    ]
}