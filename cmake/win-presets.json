{
    "version": 6,
    "include": [
        "common-presets.json"
    ],
    "configurePresets": [
        {
            "name": "msbuild",
            "inherits": "base-dev",
            "hidden": false,
            "displayName": "Visual Studio 2022 (Dev)",
            "description": "Development build with Visual Studio (2022)",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msbuild-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "inherits": "msbuild-base",
            "name": "msbuild-debug",
            "configurePreset": "msbuild",
            "configuration": "Debug",
            "targets": [
                "install"
            ]
        },
        {
            "inherits": "msbuild-base",
            "name": "msbuild-release",
            "configurePreset": "msbuild",
            "configuration": "Release",
            "targets": [
                "install"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "msbuild",
            "configurePreset": "msbuild"
        }
    ],
    "workflowPresets": [
        {
            "name": "win-dev",
            "steps": [
                {
                    "type": "configure",
                    "name": "msbuild"
                },
                {
                    "type": "build",
                    "name": "msbuild-release"
                },
                {
                    "type": "build",
                    "name": "msbuild-debug"
                }
            ]
        },
        {
            "name": "win-verify",
            "steps": [
                {
                    "type": "configure",
                    "name": "msbuild"
                },
                {
                    "type": "build",
                    "name": "msbuild-release"
                },
                {
                    "type": "build",
                    "name": "msbuild-debug"
                },
                {
                    "type": "test",
                    "name": "msbuild"
                }
            ]
        }
    ]
}