{
  "name": "ptensor",
  "version": "0.1.0",
  "description": "A portable tensor library for C++",
  "homepage": "https://github.com/yourusername/ptensor",
  "license": "MIT",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
